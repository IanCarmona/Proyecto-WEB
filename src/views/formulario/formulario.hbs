<link rel="stylesheet" href="/css/boostrap.css">
<script src="../../controllers/formulario_controller.js     "></script>
<script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.min.js"></script>
<link rel="icon" href="/img/logoescom.png" type="image/x-icon">

<title>Formulario</title>

<style>
    /* Estilos personalizados */
    html {
        position: relative;
        min-height: 100%;
    }

    body {
        margin-bottom: 60px;
        /* Altura del pie de página */
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
        /* Altura del pie de página */
        background-color: #2196f3;
        padding: 20px;
        text-align: center;
    }

    /* Estilos para las secciones del formulario */
    .form-section {
        border: 1px solid #2195f3b4;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 20px;
        background-color: #fff;
    }

    /* Estilos para el encabezado de las secciones */
    .form-section h3 {
        margin-top: 0;
        padding: 20px;
        margin-bottom: 20px;
        color: #fff;
        background-color: #2196f3;
    }

    .swal-no-styles {
        box-shadow: none;
        border: none;
        background-color: transparent;
        color: black;
        font-family: Arial, sans-serif;
    }

    .swal-no-styles .swal-title {
        font-size: 18px;
        font-weight: bold;
    }

    .swal-no-styles .swal-text {
        font-size: 14px;
    }
</style>

</head>

<body>

    <header>
        <img src="/img/pleca-gob.png" alt="Logo" class="img-fluid">
    </header>


    {{#if error}}
    
    <div class="alert alert-dismissible alert-danger text-center">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>{{error}}</strong>
    </div>


    {{/if}}

    {{#if succes}}

    <div class="alert alert-dismissible alert-success text-center">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>{{succes}}</strong>
    </div>

    {{/if}}

    


    <!-- Contenido del formulario -->
    <div class="container mt-4">
        <button type="button" class="btn btn-primary btn-lg"><a href="/listado"><p class="text-success">Lista</p></a></button>
        <h1 class="text-center">Formulario</h1>
        <br>
        <form id="formulario" action="/" method="post" class="needs-validation" novalidate>
            <!-- Sección de Datos Personales -->
            <section class="form-section">
                <h3 class="text-center">Datos Personales</h3>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="curp">CURP:</label>
                            <input type="text" class="form-control" id="curp" name="curp" pattern=".{18,18}"
                                placeholder="Ingrese su CURP" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Ingrese su CURP, debe contener 18 elementos
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="nombre">Nombre:</label>
                            <input type="text" class="form-control" id="nombre" name="nombre"
                                placeholder="Ingrese su nombre" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Ingrese su nombre
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="apPat">Primer Apellido:</label>
                            <input type="text" class="form-control" id="apPat" name="apPat"
                                placeholder="Ingrese su primer apellido" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Ingrese su apellido
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="apMat">Segundo Apellido:</label>
                            <input type="text" class="form-control" id="apMat" name="apMat"
                                placeholder="Ingrese su segundo apellido">
                            <div class="valid-feedback">
                                Campo no obligatorio
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fnac">Fecha de Nacimiento:</label>
                            <input type="date" class="form-control" id="fnac" name="fnac" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="sexo">Sexo:</label>
                            <select class="form-control" id="sexo" name="sexo" required>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Seleccione una opcion
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="discapacidad">Discapacidad/Padecimiento:</label>
                    <textarea class="form-control" id="discapacidad" name="discapacidad" rows="3"
                        placeholder="Ingrese su discapacidad o padecimiento"></textarea>
                </div>
            </section>

            <br>
            <!-- Sección de Datos de Contacto -->
            <section class="form-section">
                <h3 class="text-center">Datos de Contacto</h3>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="calle">Calle y Número:</label>
                            <input type="text" class="form-control" id="calle" name="calle"
                                placeholder="Ingrese su calle y número" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="colonia">Colonia:</label>
                            <input type="text" class="form-control" id="colonia" name="colonia"
                                placeholder="Ingrese su colonia" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>

                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="codigoPostal">Código Postal:</label>
                            <input type="text" class="form-control" id="codigoPostal" name="codigoPostal"
                                placeholder="Ingrese su código postal" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="alcaldia">Municipio:</label>
                            <input type="text" class="form-control" id="alcaldia" name="alcaldia"
                                placeholder="Ingrese su municipio" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="estado">Estado:</label>
                            <input type="text" class="form-control" id="estado" name="estado"
                                placeholder="Ingrese su estado" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="celular">Teléfono/Celular:</label>
                            <input type="text" class="form-control" id="celular" name="celular"
                                placeholder="Ingrese su teléfono o celular" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="correo">Correo:</label>
                            <input type="email" class="form-control" id="correo" name="correo"
                                placeholder="Ingrese su correo electrónico" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <br>

            <!-- Sección de Datos Académicos -->
            <section class="form-section">
                <h3 class="text-center">Datos Académicos</h3>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="escuelaMediaSup">Escuela de Media Superior:</label>
                            <select class="form-control" id="escuelaMediaSup" name="escuelaMediaSup" required>
                                <option value="Cet 1">Cet 1</option>
                                <option value="Cecyt 1">Cecyt 1</option>
                                <option value="Cecyt 2">Cecyt 2</option>
                                <option value="Cecyt 3">Cecyt 3</option>
                                <option value="Cecyt 4">Cecyt 4</option>
                                <option value="Cecyt 5">Cecyt 5</option>
                                <option value="Cecyt 6">Cecyt 6</option>
                                <option value="Cecyt 7">Cecyt 7</option>
                                <option value="Cecyt 8">Cecyt 8</option>
                                <option value="Cecyt 9">Cecyt 9</option>
                                <option value="Cecyt 10">Cecyt 10</option>
                                <option value="Cecyt 11">Cecyt 11</option>
                                <option value="Cecyt 12">Cecyt 12</option>
                                <option value="Cecyt 13">Cecyt 13</option>
                                <option value="Cecyt 14">Cecyt 14</option>
                                <option value="Cecyt 15">Cecyt 15</option>
                                <option value="Cecyt 16">Cecyt 16</option>
                                <option value="Cecyt 17">Cecyt 17</option>
                                <option value="Cecyt 18">Cecyt 18</option>
                                <option value="Cecyt 19">Cecyt 19</option>
                                <option value="Otra">Otra</option>
                            </select>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Seleccione una opción
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="area">Área del Bachillerato:</label>
                            <select class="form-control" id="area" name="area" required>
                                <option value="ICFM">Ingeniería y Ciencias Físico Matemáticas</option>
                                <option value="CMB">Ciencias Médico Biológicas</option>
                                <option value="CSA">Ciencias Sociales y Administrativas</option>
                            </select>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Seleccione una opción
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="escuelaNMS">Nombre de la Escuela NMS:</label>
                            <input type="text" class="form-control" id="escuelaNMS" name="escuelaNMS"
                                placeholder="Ingrese el nombre de la escuela de NMS" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="promedio">Promedio NMS:</label>
                            <input type="number" step="0.01" class="form-control" id="promedio" name="promedio"
                                placeholder="Ingrese el promedio de NMS" required>
                            <div class="valid-feedback">
                                Campo llenado correctamente
                            </div>
                            <div class="invalid-feedback">
                                Campo sin contestar
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="carreraElegida">Carrera Elegida NS:</label>
                            <select class="form-control" id="carreraElegida" name="carreraElegida" required>
                                <option value="IIA">Ingeniería en Inteligencia Artificial</option>
                                <option value="ISC">Ingeniería en Sistemas Computacionales</option>
                                <option value="LCD">Licenciatura en Ciencia de Datos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="ingresoESCOM">Fecha de Ingreso:</label>
                            <input type="date" class="form-control" id="ingresoESCOM" name="ingresoESCOM" required>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Otras secciones del formulario aquí -->
            <br>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg" id="registrar">Registrar</button>
            </div>
            <br>
        </form>
    </div>

    <!-- Pie de página -->
    <footer class="footer">
        <p class="text-light">2023 Escuela Superior de Cómputo <br> Unidad de Tecnología Educativa y Campus Virtual <br>
        </p>
    </footer>

    <script>
        (() => {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>