<link rel="stylesheet" href="/css/boostrap.css">
<script src="../../controllers/formulario_controller.js     "></script>
<script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.min.js"></script>
<link rel="icon" href="/img/logoescom.png" type="image/x-icon">

<title>Formulario</title>

<style>
    /* Estilos personalizados */
    html {
        position: relative;
        min-height: 100%;
    }

    body {
        margin-bottom: 60px;
        /* Altura del pie de página */
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
        /* Altura del pie de página */
        background-color: #2196f3;
        padding: 20px;
        text-align: center;
    }

    /* Estilos para las secciones del formulario */
    .form-section {
        border: 1px solid #2195f3b4;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 20px;
        background-color: #fff;
    }

    /* Estilos para el encabezado de las secciones */
    .form-section h3 {
        margin-top: 0;
        padding: 20px;
        margin-bottom: 20px;
        color: #fff;
        background-color: #2196f3;
    }

    .swal-no-styles {
        box-shadow: none;
        border: none;
        background-color: transparent;
        color: black;
        font-family: Arial, sans-serif;
    }

    .swal-no-styles .swal-title {
        font-size: 18px;
        font-weight: bold;
    }

    .swal-no-styles .swal-text {
        font-size: 14px;
    }

    
</style>

</head>

<body>

    <header>
        <img src="/img/pleca-gob.png" alt="Logo" class="img-fluid">
    </header>

    <div class="container">
        <button type="button" class="btn btn-primary btn-lg"><a href="/">Formulario</a></button>
        <h1>Datos</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>CURP</th>
                    <th>Nombre</th>
                    <th>Sexo</th>
                    <th>Dirección</th>
                </tr>
            </thead>
            <tbody>
                {{#each desayunos}}
                <tr>
                    <td>{{curp}}</td>
                    <td>{{nombre_completo}}</td>
                    <td>{{sexo}}</td>
                    <td>{{direccion_completa}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>


    
    <!-- Pie de página -->
    <footer class="footer">
        <p class="text-light">2023 Escuela Superior de Cómputo <br> Unidad de Tecnología Educativa y Campus Virtual <br>
        </p>
    </footer>
